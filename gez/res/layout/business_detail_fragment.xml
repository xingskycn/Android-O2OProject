<?xml version="1.0" encoding="utf-8"?>
<ScrollView  
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:scrollbars="vertical"  
    android:fadingEdge="vertical"> 
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:orientation="horizontal"
	        android:paddingBottom="@dimen/content_padding_bottom"
	        android:paddingLeft="@dimen/content_padding_left"
	        android:paddingRight="@dimen/content_padding_right"
	        android:paddingTop="@dimen/content_padding_top" >
	
	        <ImageView
	            android:id="@+id/business_detail_image"
	            android:layout_width="@dimen/content_image_width"
	            android:layout_height="@dimen/content_image_height"
	            android:layout_margin="@dimen/content_image_margin"
	            android:background="@drawable/bg_border"
	            android:gravity="center"
	            android:padding="2dip" />
	        
	        <TextView
                android:id="@+id/business_detail_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/business_list_first" />
	        
	        <Button
	            android:id="@+id/business_detail_button_share"
	            android:layout_width="70dip"
	            android:layout_height="30dip"
	            android:layout_marginLeft="8dip"
	            android:layout_marginRight="10dip"
	            android:background="@drawable/important_btn_bg"
	            android:text="@string/button_share_text"
	            android:textColor="@color/home_button_text_color"
	            android:textAppearance="?android:textAppearanceMedium"
	            android:visibility="visible" />
	        
	    </LinearLayout>
  
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:src="@color/content_split" />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_caip"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_dish"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_haop"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_comment"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_pingjscsj"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_time"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_qisjg"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_threshold"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_peisf"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_despatch"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_yinysj"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_shophour"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_dingz"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_address"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_dianh"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_phone"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_jianj"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_introduce"
	        />
	    
	    <com.gez.cookery.jiaoshou.widget.ColumnText
	        android:id="@+id/business_detail_frag_gongg"
	        android:layout_height="wrap_content"  
	        android:layout_width="fill_parent"
	        imagesrc="@drawable/rp_notice"
	        />
	    
	    <ImageView
		    android:id="@+id/restaurant_detail_image1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dip"
            android:visibility="gone"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="9dip" />
	    
	    <ImageView
		    android:id="@+id/restaurant_detail_image2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dip"
            android:visibility="gone"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="9dip" />
	    
	    <ImageView
		    android:id="@+id/restaurant_detail_image3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dip"
            android:visibility="gone"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="9dip" />
	    
	    <ImageView
		    android:id="@+id/restaurant_detail_image4"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dip"
            android:visibility="gone"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="9dip" />
	    
	    <ImageView
		    android:id="@+id/restaurant_detail_image5"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/bg_border"
            android:gravity="center"
            android:padding="2dip"
            android:visibility="gone"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="9dip"
            android:layout_marginRight="9dip" />
	</LinearLayout>
</ScrollView>  