<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="5dip"
    android:paddingLeft="2dip"
    android:paddingRight="2dip"
    android:paddingTop="5dip" >

    <ImageView
        android:id="@+id/make_order_item_logo"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_margin="9dip"
        android:background="@drawable/bg_border"
        android:gravity="center"
        android:padding="2dip" />

    <TextView
        android:id="@+id/make_order_item_name"
        android:layout_marginLeft="8dip"
  		android:paddingRight="3dip"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="false"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/business_list_first" />

    <LinearLayout
        android:layout_width="90dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/make_order_item_button_sub"
            android:layout_width="30dip"
            android:layout_height="25dip"
            android:background="@drawable/normal_btn_bg"
            android:text="@string/make_order_sub"
            android:textColor="@color/home_button_text_color"
            android:textAppearance="?android:textAppearanceMedium" />
        
        <TextView
                android:id="@+id/make_order_item_count"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/business_list_first" />
        
        <Button
            android:id="@+id/make_order_item_button_add"
            android:layout_width="30dip"
            android:layout_height="25dip"
            android:background="@drawable/normal_btn_bg"
            android:text="@string/make_order_add"
            android:textColor="@color/home_button_text_color"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <TextView
         android:id="@+id/make_order_item_price"
         android:layout_width="65dip"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginRight="8dip"
         android:textAppearance="?android:textAppearanceMedium"
         android:textColor="@color/business_list_first" />
    
</LinearLayout>
